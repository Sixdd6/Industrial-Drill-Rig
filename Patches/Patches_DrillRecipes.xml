<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <Operations>
      <li Class="PatchOperationTest">
      <xpath>*/ThingDef[defName="CAL_Aluminum"]</xpath>
      <!-- <success>Invert</success> -->
    </li>
    <li Class="PatchOperationAdd">
      <xpath>*/ThingDef[defName="DrillRigIndustrial"]/recipes</xpath>
        <value>
          <li>DrillAluminum</li>
          <li>DrillTin</li>
        </value>
    </li>
    <li Class="PatchOperationAdd">
      <xpath>*/RecipeDef[defName="DrillAluminum"]/products</xpath>
